                    </li>
                    <li>
                        <a href="#snippet_email_special" data-toggle="tab">Special</a>
                    </li>
                </ul>

                <!-- SNIPPETS -->
                <div class="tab-content">

                    <!-- ================ -->
                    <!-- Snippets         -->
                    <!-- ================ -->
