        <field name="arch" type="xml">

            <xpath expr="//field[@name='crm_page_id']" position="after">
                <field name="frst_zverzeichnis_id"/>
                <field name="personemailgruppe_id"/>
            </xpath>

        </field>
    </record>

</data>
</openerp>
