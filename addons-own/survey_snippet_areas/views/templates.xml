<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

        <template id="survey_page_snippet_areas" inherit_id="survey.page" name="Survey Page Snippet Areas">
            <xpath expr="//div[@class='page-header']" position="before">
                <div class="survey_page_snippets survey_page_snippets_top">
                    <div t-field='page.snippets_top' class="oe_no_empty"/>
                </div>
            </xpath>
            <xpath expr="//div[@id='AJAXErrorModal']" position="after">
                <div class="survey_page_snippets survey_page_snippets_bottom">
                    <div t-field='page.snippets_bottom' class="oe_no_empty"/>
                </div>
            </xpath>
        </template>

    </data>
</openerp>
