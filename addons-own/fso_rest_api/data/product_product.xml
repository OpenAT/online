        <!-- =============== -->
        <!-- product.product -->
        <!-- =============== -->

        <!-- ir.export field list for openapi access -->
        <record id="frst_rest_api_product_product_export" model="ir.exports">
            <field name="name">Fundraising Studio Rest API Product Template Fields</field>
            <field name="resource">product.product</field>
            <field
                name="export_fields"
                eval="[
                    (0, 0, {'name': 'id'}),
                    (0, 0, {'name': 'create_uid'}),
                    (0, 0, {'name': 'create_date'}),
                    (0, 0, {'name': 'write_uid'}),
                    (0, 0, {'name': 'write_date'}),

                    (0, 0, {'name': 'product_tmpl_id'}),
                    (0, 0, {'name': 'default_code'}),
                    ]"
            />
        </record>

        <!-- "context" for openapi access -->
        <record id="frst_rest_api_product_product_context" model="openapi.access.create.context">
            <field name="name">frst_rest_api_product_product_context</field>
            <field name="model_id" ref="sale.model_product_product" />
            <field name="context">{"lang": "de_DE"}</field>
        </record>

        <!-- openapi access -->
        <record id="frst_rest_api_product_product_access" model="openapi.access">
            <field name="namespace_id" ref="frst_rest_api_namespace" />
            <field name="model_id" ref="sale.model_product_product" />

            <field name="api_create" eval="True" />
            <field name="api_read" eval="True" />
            <field name="api_update" eval="True" />
            <field name="api_delete" eval="False" />

            <field name="api_public_methods" eval="True" />
            <field name="public_methods" eval="'search\n'"/>
            <field name="private_methods" eval="" />

            <field name="allowed_fields_id" ref="fso_rest_api.frst_rest_api_product_product_export" />
            <field name="read_one_id" ref="fso_rest_api.frst_rest_api_product_product_export" />
            <field name="read_many_id" ref="fso_rest_api.frst_rest_api_product_product_export" />

            <field
                name="create_context_ids"
                eval="[(4, ref('fso_rest_api.frst_rest_api_product_product_context'))]"
            />
        </record>

