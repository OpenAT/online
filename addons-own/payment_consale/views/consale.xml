<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="transaction_form_consale" model="ir.ui.view">
            <field name="name">acquirer.transaction.form.consale</field>
            <field name="model">payment.transaction</field>
            <field name="inherit_id" ref="payment.transaction_form"/>
            <field name="arch" type="xml">
                <xpath expr='//notebook' position='inside'>
                    <page string="consale TX Details">
                        <group>

                            <field name="consale_provider_name"/>

                            <field name="consale_method"/>
                            <field name="consale_method_other"/>
                            <field name="consale_method_brand"/>

                            <field name="consale_method_directdebit_provider"/>

                            <field name="consale_method_account_owner"/>
                            <field name="consale_method_account_iban"/>
                            <field name="consale_method_account_bic"/>
                            <field name="consale_method_account_bank"/>

                            <field name="consale_recurring_payment_provider"/>

                            <field name="consale_error_code"/>
                            <field name="consale_error_msg"/>

                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
