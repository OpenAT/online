<?xml version="1.0" encoding="utf-8"?>
<openerp><data>
    
    <!-- FORM VIEW -->
    <record model="ir.ui.view" id="frst_workflow_form">
        <field name="name">frst_workflow_form</field>
        <field name="model">frst.workflow</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Workflow">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- TREE/LIST VIEW -->
    <record model="ir.ui.view" id="frst_workflow_tree">
        <field name="name">frst_workflow_tree</field>
        <field name="model">frst.workflow</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Workflow" toolbar="1">
                <field name="id"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <!-- SEARCH VIEW -->
    <record model="ir.ui.view" id="frst_workflow_search">
        <field name="name">frst_workflow_search</field>
        <field name="model">frst.workflow</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Workflow">
                <field name="id"/>
                <field name="name"/>
            </search>
        </field>
    </record>
    <!-- ACTIONS -->
    <!-- https://www.odoo.com/de_DE/forum/hilfe-1/question/how-do-you-define-specific-not-default-views-for-each-view-mode-type-form-tree-etc-in-act-window-xml-76275 -->
    <!-- https://www.odoo.com/de_DE/forum/hilfe-1/question/multiple-create-form-views-same-model-107193 -->
    <record id="frst_workflow_action" model="ir.actions.act_window" >
        <field name="name">Workflows</field>
        <field name="res_model">frst.workflow</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="frst_workflow_search"/>
    </record>
    <record id="frst_workflow_tree_viewaction" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="frst_workflow_tree"/>
        <field name="act_window_id" ref="frst_workflow_action"/>
    </record>
    <record id="frst_workflow_form_viewaction" model="ir.actions.act_window.view">
        <field name="sequence" eval="20"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="frst_workflow_form"/>
        <field name="act_window_id" ref="frst_workflow_action"/>
    </record>
    <!-- And we add the Action to a Menu with the shortcut menuitem -->
    <menuitem id="frst_workflow_menu" action="frst_workflow_action" parent="base.menu_config" sequence="1270"/>
    
</data></openerp>
